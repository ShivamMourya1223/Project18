<h1>Edit Form</h1>
<%=form_for @user  do |f| %>

<%=f.label 'Name'%>
<%=f.text_field :name%>
<br><br>

<div class="form col-sm-4">
<%=f.label 'Age'%>
<%=f.text_field :age,class:"form-control"%>
<br><br>
</div><br>

<div>
<%=f.label 'Adress'%>
<%=f.text_field :adress%>
<br><br>
</div>

<%=f.label 'Email'%>
<%=f.text_field :email%>
<br><br>
<%= f.submit %>

<% end %>